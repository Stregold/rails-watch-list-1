<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/736x/4b/ed/36/4bed369e3d0341b40dbb46d7b97076e2.jpg);">
  <div class="container">
    <h2><%= @list.name %></h2>
  </div>
</div>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <%= bookmark.movie.title %> - rating : <%= bookmark.movie.rating %>
    - description : <%= bookmark.movie.overview %>
    <li class="list-group-item">
    <%= bookmark.comment %>
    </li>
    <%= link_to "delete",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to 'Back', lists_path %> |
